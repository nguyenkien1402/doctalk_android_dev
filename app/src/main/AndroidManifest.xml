<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.docktalk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name=".splashloginsignup.SplashActivity"
            android:theme="@style/AppThemeFullScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".splashloginsignup.LoginActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity android:name=".splashloginsignup.SignupActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity android:name=".splashloginsignup.RegisterPatientActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity android:name=".splashloginsignup.PhoneNumberConfirmActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity android:name=".splashloginsignup.RegisterDoctorActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity android:name=".splashloginsignup.RegisterDoctorDetailActivity"
            android:theme="@style/AppThemeFullScreen"/>
        <activity android:name=".FirebaseUploadDemo"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>